<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="setting_image_layout">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="setting_checkbox">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/dp_44</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:button">@null</item>
    </style>


    <style name="common_button_15">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_shape_round_corner_green</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
    </style>

    <style name="style_15_button_base">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/dp_50</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="style_15_light_page_title" parent="@style/style_text_base">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_15_dark_text_main</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="page_title">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/color_dcdcdc</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="style_15_button_small" parent="@style/style_15_button_base">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/color_selector_button_text</item>
        <item name="android:background">@drawable/selector_shape_round_corner_green</item>
        <item name="android:layout_height">@dimen/dp_25</item>
    </style>
    <style name="style_15_button_normal" parent="@style/style_15_button_base">
        <item name="android:textColor">@color/color_selector_button_text</item>
        <item name="android:background">@drawable/selector_shape_round_corner_green</item>
        <item name="android:layout_height">@dimen/dp_36</item>
    </style>
    <style name="loading_bar_style">
        <item name="android:layout_width">50.0dip</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="indicatorColor">@color/air_colorAccent</item>

    </style>

    <style name="style_15_dark_edit_text">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_15_input_text</item>
        <item name="android:textColorHint">@color/color_15_input_hint</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center</item>
        <item name="android:background">@drawable/bg_input_text_dark</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="top_image_btn">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/dp_44</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
    </style>
    <style name="activity_title">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_15_dark_text_main</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="style_15_divider_horizontal">
        <item name="android:background">@color/color_15_dark_divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>
    <style name="activity_sub_title">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_15_dark_text_main</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="style_15_light_paragraph_title" parent="@style/style_text_base">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/color_15_dark_text_main</item>
    </style>
    <style name="style_15_divider_vertical">
        <item name="android:background">@color/color_15_dark_divider</item>
        <item name="android:layout_width">1.0px</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="style_15_light_paragraph_tip" parent="@style/style_text_base">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_15_light_text_tip</item>
    </style>
    <style name="style_text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">@dimen/dp_5</item>
    </style>

    <style name="style_15_light_paragraph_body" parent="@style/style_text_base">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_15_dark_text_main</item>
    </style>
    <style name="MySpinner">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/selector_spinner_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:popupBackground">@color/color_15_input_dark_background</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>
</resources>
