<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:clickable="true">

    <View
        android:id="@id/high_light_area"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_112"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_68"
        android:layout_marginBottom="@dimen/dp_28"
        android:background="@drawable/shape_round_corner_dcdcdc_dash" />

    <ImageView
        android:id="@id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/high_light_area"
        android:layout_alignLeft="@id/tv_tip"
        android:layout_marginBottom="@dimen/dp_10"
        android:src="@drawable/arrow2" />

    <TextView
        android:id="@id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_arrow"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/view_the_guide_curve"
        android:textColor="@color/color_dcdcdc_white" />

    <TextView
        android:id="@id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_100"
        android:background="@drawable/shape_round_corner_dcdcdc_dash"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/got_it"
        android:textColor="@color/color_dcdcdc_white" />
</RelativeLayout>