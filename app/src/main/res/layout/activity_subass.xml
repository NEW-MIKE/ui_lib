<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subass.SubassActivity">

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnbtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:text="Button"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@id/btnradio"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnradio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="radio"
        android:layout_marginLeft="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@id/btnbtn"
        app:layout_constraintBottom_toBottomOf="@id/btnbtn"
        app:layout_constraintRight_toLeftOf="@id/btnchoose"
        app:layout_constraintLeft_toRightOf="@id/btnbtn" />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/btnchoose"
        android:text="choose"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnbtn"
        app:layout_constraintBottom_toBottomOf="@id/btnbtn"
        app:layout_constraintLeft_toRightOf="@id/btnradio"/>


    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btndialog"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:text="Dialog"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/btnbtn"
        app:layout_constraintTop_toBottomOf="@id/btnbtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>