<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/shape_round_muti_choose_object"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_choose_count"
        style="@style/style_15_light_paragraph_body"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:drawableRight="@drawable/tonight_best_target_fold"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_6"
        android:text="0"
        android:textSize="@dimen/sp_17" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choose_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/dp_m_5"
        android:paddingRight="@dimen/dp_20"
        android:visibility="visible" />
</LinearLayout>