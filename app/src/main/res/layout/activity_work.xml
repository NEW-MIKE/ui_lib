<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workview.WorkActivity">

    <android.widget.Button
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Sequence"
        android:background="@color/_xpopup_title_color"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@id/enter_telescope"
        android:id="@+id/enter_sequence"/>

    <android.widget.Button
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/enter_telescope"
        android:background="@color/darker_blue"
        android:text="Telescope"
        app:layout_constraintTop_toTopOf="@id/enter_sequence"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/enter_sequence"
        app:layout_constraintBottom_toBottomOf="@id/enter_sequence"
        app:layout_constraintRight_toLeftOf="@id/enter_guide"
        />

    <android.widget.Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/enter_guide"
        android:text="guide"
        android:background="@color/yellow"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/enter_telescope"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/enter_sequence"
        app:layout_constraintTop_toTopOf="@id/enter_sequence"/>

    <android.widget.Button
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:id="@+id/enter_dialog"
        android:text="dialog"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/enter_sequence"
        app:layout_constraintHorizontal_weight="1"
        android:background="@color/green_sea"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>