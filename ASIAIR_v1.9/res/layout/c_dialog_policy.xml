<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@drawable/bg_dialog_shape_corner" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:padding="@dimen/dp_16" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:paddingBottom="@dimen/dp_10" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/tv_title_1" android:text="@string/dialog_policy_title_1" android:layout_weight="1.0" style="@style/custom_dialog_text_title" />
            <View android:id="@id/tv_title_divider" android:visibility="gone" style="@style/style_15_divider_vertical" />
            <TextView android:id="@id/tv_title_2" android:visibility="gone" android:text="@string/dialog_policy_title_2" android:layout_weight="1.0" style="@style/custom_dialog_text_title" />
        </LinearLayout>
        <ScrollView android:layout_width="fill_parent" android:layout_height="@dimen/dp_160">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:gravity="center|left" android:layout_gravity="left" android:id="@id/tv_content" android:minHeight="@dimen/dp_40" style="@style/custom_dialog_text_content" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <View style="@style/style_15_divider_horizontal" />
    <LinearLayout android:orientation="horizontal" android:id="@id/ll_opt" android:layout_width="fill_parent" android:layout_height="@dimen/dp_44" android:layout_alignParentBottom="true">
        <TextView android:textColor="@color/color_dialog_title" android:id="@id/btn_exit" android:text="@string/policy_exit" android:layout_weight="1.0" style="@style/custom_dialog_text_button" />
        <LinearLayout android:orientation="horizontal" android:id="@id/ll_ok" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
            <View style="@style/style_15_divider_vertical" />
            <TextView android:id="@id/btn_accept" android:text="@string/accept" style="@style/custom_dialog_text_button" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>